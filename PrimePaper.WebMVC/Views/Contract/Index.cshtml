@model IEnumerable<PrimePaper.Models.ContractListItem>

@{
    ViewBag.Title = "Index";
}

<body class="contractindex">

<h2>Contract</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
    <style type="text/css">


        .table th, .table td {
            text-align: center;
        }
    </style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.BusinessName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Type)
        </th>
        @*
        <th>
            @Html.DisplayNameFor(model => model.ContractID)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.PaymentReceived)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentsMethod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContractLength)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            @*<td>
                @Html.HiddenFor(modelItem => item.ContractID)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.PaymentReceived)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentsMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractLength)
            </td>
            <td>
                @Html.ActionLink("  ", "Edit", new { id = item.ContractID }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil" }) 
                @Html.ActionLink("  ", "Details", new { id = item.ContractID }, htmlAttributes: new { @class = "glyphicon glyphicon-info-sign" }) 
                @*@Html.ActionLink("  ", "Delete", new { id = item.ContractID }, htmlAttributes: new { @class = "glyphicon glyphicon-trash" })*@
            </td>
        </tr>
    }

</table>
</body>
